<?xml version="1.0" ?>
<odoo>
    <record id="view_firebase_push_search" model="ir.ui.view">
        <field name="name">firebase.push.search</field>
        <field name="model">firebase.push</field>
        <field name="arch" type="xml">
            <search string="Firebase Push Notification">
                <field name="from_user" />
                <field name="from_user_id" />
                <field name="to_user" />
                <field name="to_user_id" />
                <field name="create_date" />
                <field name="write_date" />
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="view_firebase_push_tree" model="ir.ui.view">
        <field name="name">firebase.push.tree</field>
        <field name="model">firebase.push</field>
        <field name="arch" type="xml">
            <tree string="Firebase Push Notification">
                <field name="app_name" />
                <field name="from_user" />
                <field name="from_user_id" />
                <field name="to_user" />
                <field name="to_user_id" />
                <field name="create_date" />
                <field name="write_date" />
                <field name="name" />
                <field name="status" />
                <field name="api_status" optional="hide" />
                <field name="message" optional="hide" />
                <field name="payload" optional="hide" />
            </tree>
        </field>
    </record>


    <record id="view_firebase_push_form" model="ir.ui.view">
        <field name="name">firebase.push.form</field>
        <field name="model">firebase.push</field>
        <field name="arch" type="xml">
            <form string="Firebase Push Notification">
                <group>
                    <field name="status" invisible="1"/>
                    <group>
                        <field name="app_name" required="True"/>
                        <field name="to_user" required="True"/>
                        <button name="action_send_notification" string="Send Notification" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|',('status', '=', 'success'),('status', '=', 'delivered')]}">
                        </button>
                    </group>
                    <group>
                        <field name="message" required="True"/>
                        <field name="name" />
                        <field name="payload" />
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_firebase_push_form" model="ir.actions.act_window">
        <field name="name">Firebase Push Notification</field>
        <field name="res_model">firebase.push</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
