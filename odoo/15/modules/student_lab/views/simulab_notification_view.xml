<?xml version="1.0" ?>
<odoo>
    <record id="view_simulab_notification_search" model="ir.ui.view">
        <field name="name">simulab.notification.search</field>
        <field name="model">simulab.notification</field>
        <field name="arch" type="xml">
            <search string="SimuLab Notifications">
                <field name="message_reference"/>
                <field name="to_user"/>
                <field name="message_title" optional="hide"/>
                <field name="message"/>
                <field name="retry_counts"/>
                <field name="phone_number"/>
                <field name="email"/>
                <field name="channel_id"/>
                <field name="status"/>
                <field name="scheduled_date"/>
                <field name="notification_response"/>
            </search>
        </field>
    </record>

    <record id="view_simulab_notification_tree" model="ir.ui.view">
        <field name="name">simulab.notification.tree</field>
        <field name="model">simulab.notification</field>
        <field name="arch" type="xml">
            <tree string="SimuLab Notifications" decoration-success="status=='success'"
                  decoration-danger="status=='failed'" decoration-warning="status=='new'">
                <field name="message_reference"/>
                <field name="to_user"/>
                <field name="channel_id"/>
                <field name="status"/>
                <field name="scheduled_date"/>
                <field name="retry_counts"/>
                <field name="message_title" optional="hide"/>
                <field name="message"/>
                <field name="phone_number"/>
                <field name="email"/>
                <field name="notification_response"/>
            </tree>
        </field>
    </record>


    <record id="view_simulab_notification_form" model="ir.ui.view">
        <field name="name">simulab.notification.form</field>
        <field name="model">simulab.notification</field>
        <field name="arch" type="xml">
            <form string="Notification Template">
                <group>
                    <field name="message_reference"/>
                    <field name="to_user"/>
                    <field name="channel_id"/>
                    <field name="status"/>
                    <field name="scheduled_date"/>
                    <field name="retry_counts"/>
                    <field name="notification_response"/>
                </group>
                <group>
                    <field name="message_title"/>
                    <field name="message"/>
                    <field name="phone_number"/>
                    <field name="email"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_simulab_notification_form" model="ir.actions.act_window">
        <field name="name">SimuLab Notifications</field>
        <field name="res_model">simulab.notification</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
