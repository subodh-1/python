    <template id="replace_icon" name="icon Layout" inherit_id="web.layout">
        <xpath expr="//link[@type='image/x-icon']" position="replace">
            <link type="image/x-icon" rel="shortcut icon"
                  t-att-href="x_icon or '/simulab/static/src/img/simulab_favicon.png'"/>
        </xpath>
    </template>

    <record id="app_res_config_settings_view_form" model="ir.ui.view">
