    <record id="view_simulab_homepage_tree" model="ir.ui.view">
        <field name="name">simulab.homepage.tree</field>
        <field name="model">simulab.homepage</field>
        <field name="arch" type="xml">
            <tree string="Home" create="false">
                <field name="school_id" groups="simulab.group_simulab_administration"/>
                <field name="active_teachers"/>
                <field name="active_classes"/>
                <field name="student_count"/>
                <field name="quizes_count"/>
            </tree>
