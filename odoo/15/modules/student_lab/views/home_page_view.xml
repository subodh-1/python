<?xml version="1.0" ?>
<odoo>
    <record id="kts_simulab_homepage_kanban_view_school_administration" model="ir.ui.view">
        <field name="name">simulab.homepage.kanban</field>
        <field name="model">simulab.homepage</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="active_teachers"/>
                <field name="active_classes"/>
                <field name="student_count"/>
                <field name="quizes_count"/>
                <field name="school_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div style="background-color: #effefbfa;width:100%">
                            <style>
                                .card {
                                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                                transition: 0.3s;
                                border-radius: 5px;
                                text-align:center;
                                }

                                .card:hover {
                                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
                                }

                                img {
                                    border-radius: 5px 5px 0 0;
                                    margin: 8px;
                                    display: block;
                                    margin-left: auto;
                                    margin-right: auto;
                                }
                                .container > p{
                                    font-family: 'Lato';
                                    font-style: normal;
                                    color: #6A6F77;
                                    font-size: 14px;
                                }
                                .container > h4 >b{
                                font-family: 'Ubuntu';
                                font-style: normal;}
                            </style>
                            <h2 style="padding: 10px;text-align:center"><field name="school_id"/></h2>
                            <div style="display: flex;padding: 10px; justify-content: center;">
                                <div class="card">
                                <img src="/simulab/static/src/img/lecturer_k01.png" alt="Avatar" style="width:40%"/>
                                <div class="container">
                                    <h4>
                                        <b><field name="active_teachers"/></b>
                                    </h4>
                                    <p>Active Teacher</p>
                                </div>
                            </div>
                                <div class="card" style="margin-left: 20px;">
                                    <img src="/simulab/static/src/img/classes_1.png" alt="Avatar" style="width:40%"/>
                                    <div class="container">
                                        <h4>
                                            <b><field name="active_classes"/></b>
                                        </h4>
                                        <p>Active Classes</p>
                                    </div>
                                </div>
                            </div>
                            <div style="display: flex;padding: 10px;justify-content: center;">
                                <div class="card">
                                <img src="/simulab/static/src/img/student_1.png" alt="Avatar" style="width:40%"/>
                                <div class="container">
                                    <h4>
                                        <b><field name="student_count"/></b>
                                    </h4>
                                    <p>Active Student</p>
                                </div>
                            </div>
                                <div class="card" style="margin-left: 20px;">
                                    <img src="/simulab/static/src/img/quizes.png" alt="Avatar" style="width:40%"/>
                                    <div class="container">
                                        <h4>
                                            <b><field name="quizes_count"/></b>
                                        </h4>
                                        <p>Active Quizes</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
