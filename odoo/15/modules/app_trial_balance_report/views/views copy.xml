<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="immersive_trial_balance_report.list">
      <field name="name">immersive_trial_balance_report list</field>
      <field name="model">immersive_trial_balance_report.immersive_trial_balance_report</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="immersive_trial_balance_report.action_window">
      <field name="name">immersive_trial_balance_report window</field>
      <field name="res_model">immersive_trial_balance_report.immersive_trial_balance_report</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="immersive_trial_balance_report.action_server">
      <field name="name">immersive_trial_balance_report server</field>
      <field name="model_id" ref="model_immersive_trial_balance_report_immersive_trial_balance_report"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->
<!--
    <menuitem name="immersive_trial_balance_report" id="immersive_trial_balance_report.menu_root"/>
-->
    <!-- menu categories -->

    <menuitem name="Trial Balance Report" id="immersive_trial_balance_report.trial_balance_report" parent="account.menu_finance_reports"/>
    <menuitem name="Trial Balance Report Action" id="immersive_trial_balance_report.trial_balance_report_act" parent="account.menu_finance_reports"/>

    <!-- actions -->

    <menuitem name="List" id="immersive_trial_balance_report.trial_balance_report_list" parent="immersive_trial_balance_report.trial_balance_report"
              action="immersive_trial_balance_report.action_window"/>
    <menuitem name="Server to list" id="immersive_trial_balance_report" parent="immersive_trial_balance_report.trial_balance_report_act"
              action="immersive_trial_balance_report.action_server"/>

  </data>
</odoo>