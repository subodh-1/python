<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="cancel_request" model="mail.template">
            <field name="name">Cancel: Request</field>
            <field name="model_id" ref="kts_helpdesk.model_email_template"/>
            <field name="subject"></field>
            <field name="email_from">"${object.create_uid.company_id.email_name | safe}" &lt;${(object.create_uid.company_id.email) | safe}&gt;</field>
            <field name="email_to"></field>
            <field name="body_html" type="html">
                <div></div>
            </field>
        </record>

        <record id="helpdesk_incident_new_to_submitted_01" model="mail.template">
            <field name="name">Incident Reporting: New to Submitted</field>
            <field name="model_id" ref="kts_helpdesk.model_helpdesk_incident"/>
            <field name="subject">New Incident Reported ${object.number}</field>
            <field name="email_from">"${object.create_uid.company_id.email_name | safe}" &lt;${(object.create_uid.company_id.email) | safe}&gt;</field>
            <field name="email_to"></field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Dear IT Admin,
                        <br/>
                        <br/>
                        Incident Number ${object.number} initiated by ${object.create_uid.name}.
                        <br/>
                        <br/>
                        Issue Title: ${object.name}
                        <br/>
                        Description: ${object.description|safe}
                        <div style="margin: 16px 0px 16px 0px;">
                            <a href='${object.website_url}'
                               style="background-color: #ffcb05; padding: 8px 16px 8px 16px; text-decoration: none; color: #000000; border-radius: 5px; font-size:13px;">
                                Open Incident
                            </a>
                        </div>
                        This is system-generated email. Please do not respond.
                        <br/>
                        Regards,

                    </p>
                </div>
            </field>
        </record>
        <record id="helpdesk_incident_submitted_to_close" model="mail.template">
            <field name="name">Incident Reporting: Submitted to Close</field>
            <field name="model_id" ref="kts_helpdesk.model_helpdesk_incident"/>
            <field name="subject">Closed Incident Reported ${object.number}</field>
            <field name="email_from">"${object.create_uid.company_id.email_name | safe}" &lt;${(object.create_uid.company_id.email) | safe}&gt;</field>
            <field name="email_to"></field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Dear ${object.create_uid.name},
                        <br/>
                        <br/>
                        Incident Number ${object.number} initiated by you is closed.
                        <br/>
                        <br/>
                        Issue Title: ${object.name}
                        <br/>
                        Description: ${object.description|safe}
                        <br/>
                        IT Remark: ${object.it_remark or ''}
                        <div style="margin: 16px 0px 16px 0px;">
                            <a href='${object.website_url}'
                               style="background-color: #ffcb05; padding: 8px 16px 8px 16px; text-decoration: none; color: #000000; border-radius: 5px; font-size:13px;">
                                View Incident
                            </a>
                        </div>
                        This is system-generated email. Please do not respond.
                        <br/>
                        Regards,

                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
