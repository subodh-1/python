<?xml version='1.0' encoding='utf-8' ?>
<odoo>

    <record id="Workflow_model_action" model="ir.actions.act_window">
        <field name="name">Workflow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">workflow.model</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <record id="workflow_stage_action" model="ir.actions.act_window">
        <field name="name">Workflow Stage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">workflow.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="helpdesk_ticket_channel_action" model="ir.actions.act_window">
        <field name="name">Channels</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.channel</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="helpdesk_ticket_category_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Incident Reporting</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.incident</field>
        <field name="view_mode">tree,kanban,form,pivot</field>
    </record>

    <record model="ir.actions.act_window" id="open_dashboard_action">
        <field name="name">Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="dashboard_my_dash_view"/>
    </record>

    <menuitem id="helpdesk_ticket_main_menu" name="Helpdesk" sequence="3" web_icon="kts_helpdesk,static/description/icon.png"/>
    <menuitem id="menu_my_dashboard" name="Dashboard" parent="helpdesk_ticket_main_menu" action="open_dashboard_action" sequence="-1"  groups="kts_workflow.group_defence_admin"/>

    <menuitem id="incident_model_menu" name="Incident Reporting" parent="helpdesk_ticket_main_menu" action="helpdesk_ticket_action" sequence="1"/>

    <menuitem id="helpdesk_ticket_config_main_menu" name="Configuration" parent="helpdesk_ticket_main_menu" sequence="5" groups="kts_workflow.group_defence_admin">
        <menuitem id="helpdesk_ticket_channel_menu" name="Channels" action="helpdesk_ticket_channel_action"/>
        <menuitem id="helpdesk_ticket_category_menu" name="Categories" action="helpdesk_ticket_category_action"/>
    </menuitem>



</odoo>
