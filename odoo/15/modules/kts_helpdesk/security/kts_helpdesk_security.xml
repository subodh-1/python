            <field name="groups" eval="[(4, ref('kts_workflow.group_defence_user'))]"/>
        </record>
        <record id="helpdesk_ticket_admin_rule" model="ir.rule">
            <field name="name">manager Tickets</field>
            <field ref="model_helpdesk_incident" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('kts_workflow.group_defence_admin'))]"/>
        </record>

    </data>
</odoo>
