        <record id="helpdesk_ticket_user_rule" model="ir.rule">
            <field name="name">User Tickets</field>
            <field ref="model_helpdesk_incident" name="model_id"/>
            <field name="domain_force">
                ['|','|','|','|',('create_uid','=',user.id),('workflow_lines.team_id.team_manager_id', '=',
                user.id),('workflow_lines.team_id.team_leader_id', '=', user.id),('workflow_lines.user_id', '=',
                user.id),('workflow_lines.team_id.user_ids', '=', user.id)]
